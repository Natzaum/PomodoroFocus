<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PomodoroFocus.MainPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <Grid RowDefinitions="Auto, *" Padding="24">
        <VerticalStackLayout Spacing="16" HorizontalOptions="Center" VerticalOptions="Center">
            <Border StrokeThickness="2" Stroke="{DynamicResource Primary}" Background="Transparent" Padding="24" StrokeShape="RoundRectangle 20,20,20,20">
                <Label Text="{Binding RemainingTimeFormatted}"
                       FontSize="64"
                       HorizontalTextAlignment="Center"
                       TextColor="{DynamicResource PrimaryText}"
                       FontAttributes="Bold" />
            </Border>

            <HorizontalStackLayout Spacing="12" HorizontalOptions="Center">
                <Button Text="Iniciar" Command="{Binding StartCommand}" StyleClass="PrimaryAction" />
                <Button Text="Pausar" Command="{Binding PauseCommand}" />
                <Button Text="Resetar" Command="{Binding ResetCommand}" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Grid>

</ContentPage>